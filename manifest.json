{
  "manifest_version": 3,
  "name": "HU Form Enhancer",
  "version": "1.0",
  "description": "Enhances HU forms with validation, auto-focus, and touch UI.",
  "content_scripts": [
    {
      "matches": [
          "http://localhost:5500/*",
      "https://localhost:5500/*",
      "http://127.0.0.1:5500/*",
      "*://*.de.pwo.ag/*"   
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
